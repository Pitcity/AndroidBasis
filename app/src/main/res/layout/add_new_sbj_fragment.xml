<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="10dp">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        android:text="@string/adding_new_subject"/>

    <EditText
        android:id="@+id/addNew_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/enter_code_here"
        android:inputType="numberSigned"/>

    <EditText
        android:id="@+id/addNew_descr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/description"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/addNew_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submit"/>

    <com.example.itovp.listtest.views.KindOfView
        android:id="@+id/ownThing"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:lineColor="@color/colorPrimary"
        app:circleColor="@color/error_color"
        app:lineWidth="thick"/>

</LinearLayout>